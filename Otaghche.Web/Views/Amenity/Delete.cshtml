@model AmenityVM

<div class="card w-100 border-0 p-4">
	<div class="card-header bg-success bg-gradient py-3">
		<div class="row">
			<div class="col-12 text-center ">
				<h2 class="text-white">اضافه کردن امکانات رفاهی جدید</h2>
			</div>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row">
			<input asp-for="Amenity.Id" hidden />
			
			<div class="p-4">
				<div class="form-floating py-1 m-1 col-12">
					<select disabled class="form-select border shadow" asp-for="Amenity.HotelId" asp-items="Model.HotelsList">
						<option disabled selected>---هتل مورد نظر را انتخاب کنید---</option>
					</select>
					<label asp-for="Amenity.HotelId" class="form-label ms-2"></label>
				</div>
				<div class="form-floating m-1 py-1 col-12">
					<input disabled asp-for="Amenity.Name" class="form-control border shadow" />
					<label asp-for="Amenity.Name" class="form-label ms-2"></label>
				</div>
				<div class="form-floating m-1 py-1 col-12">
					<input disabled asp-for="Amenity.Description" class="form-control border shadow" />
					<label asp-for="Amenity.Description" class="form-label ms-2"></label>
				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-3 m-1 mt-2 ">
						<button class="btn btn-danger w-100" type="submit">
							حذف   <i class="bi bi-trash-fill"></i>
						</button>
					</div>
					<div class="col-6 col-md-3 m-1 mt-2">
						<a asp-controller="Amenity" asp-action="Index" class="btn btn-secondary w-100">
							لغو   <i class="bi bi-x"></i>
						</a>
					</div>
				</div>
			</div>

		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}