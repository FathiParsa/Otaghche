@model RoomVM

@{

}

<div class="w-100 card border-0 p-4">
	<div class="card-header bg-success bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">افزودن اتاق جدید</h2>
			</div>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row">
			<input type="text" asp-for="Room.RoomNumber" hidden/>
			<div class="p-4">
				<div class="form-floating py-1 px-2 col-12 m-1">
					<select class="form-select border shadow" asp-for="Room.HotelId" asp-items="Model.HotelsList" disabled>
						<option selected disabled>--هتل را انتخاب کنید--</option>
					</select>
					<label class="form-label ms-2" asp-for="Room.HotelId"></label>
				</div>
				<div class="form-floating py-1 px-2 col-12 m-1">
					<input type="text" class="form-control border shadow" asp-for="Room.RoomNumber" disabled/>
					<label class="form-label ms-2" asp-for="Room.RoomNumber"></label>
				</div>
				<div class="form-floating py-1 px-2 col-12 m-1">
					<input type="text" class="form-control border shadow" asp-for="Room.Details" disabled/>
					<label class="form-label ms-2" asp-for="Room.Details"></label>
				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-3 m-1 mt-2">
						<button type="submit" class="btn btn-danger w-100">
							حذف  <i class="bi bi-trash-fill"></i>
						</button>
					</div>
					<div class="col-6 col-md-3 m-1 mt-2">
						<a asp-controller="Room" asp-action="Index" class="btn btn-secondary w-100">
							لغو  <i class="bi bi-x"></i>
						</a>
					</div>
				</div>

			</div>
		</form>

	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
